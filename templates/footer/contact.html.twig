{% extends 'base.html.twig' %}
{% block searchbar %}{% endblock %}

{% block title %}Mobilmacher - Kontakt{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="row">
                    {{ form_start(form) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col" id="some-custom-id">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.phoneNumber) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <a href="{{ path('homepage') }}">{{ 'Back.to.homepage' | trans }}</a>

    </div>
{% endblock %}
