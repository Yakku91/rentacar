{% extends 'base.html.twig' %}
        {% block title2 %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col"><h1 class="mb-5 fs-2 fw-normal text-secondary">{{ title | trans }}</h1>
                <div class="row">
                    {{ form_start(form) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.formOfAddress) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col" id="some-custom-id">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.phoneNumber) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-5">
                            {{ form_row(addressForm.country) }}
                        </div>
                        <div class="col-12 col-md-6 col-lg-2">
                            {{ form_row(addressForm.zipCode) }}
                        </div>
                        <div class="col-12 col-md-6 col-lg-5">
                            {{ form_row(addressForm.city) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-5">
                            {{ form_row(addressForm.street) }}
                        </div>
                        <div class="col-12 col-md-6 col-lg-2">
                            {{ form_row(addressForm.houseNumber) }}
                        </div>
                        <div class="col-12 col-md-6 col-lg-5">
                            {{ form_row(addressForm.comments) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
